                    <div class="card-category">Registra | Edita | Elimina</div>
                    <h3 class="card-heading">-INVENTARIO-</h3>
                </div>
            </div>
            <div class="card" onclick="window.location.href='/admin/pedidos'">
                <div class="card-background" style="background-image: url('/img/admin/dashboard/4.png');"></div>
                <div class="content">
                    <div class="card-category">Registra | Edita | Elimina</div>
                    <h3 class="card-heading">-PEDIDOS-</h3>
                </div>
            </div>
            <div class="card" onclick="window.location.href='/admin/reportes'">
                <div class="card-background" style="background-image: url('/img/admin/dashboard/5.png');"></div>
                <div class="content">
                    <div class="card-category">Registra | Edita | Elimina</div>
                    <h3 class="card-heading">-REPORTES-</h3>
                </div>
            </div>
        </div>
    </section>
